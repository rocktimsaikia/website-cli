{
	"name": "rocktim",
	"version": "1.0.2",
	"description": "CLI version of my website",
	"keywords": [
		"rocktimsaikia",
		"rocktim",
		"cli"
	],
	"repository": "rocktimsaikia/website-cli",
	"funding": "https://github.com/sponsors/rocktimsaikia",
	"license": "MIT",
	"author": {
		"name": "Rocktim Saikia",
		"email": "rocktimthedev@gmail.com",
		"url": "https://rocktimsaikia.dev"
	},
	"type": "module",
	"bin": "./dist/cli.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "rm -rf ~/.notes/*",
		"demo": "tsx src/cli.ts",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write --unsafe .",
		"test": "echo \"Error: no test specified\" && exit 0",
		"release": "np --no-publish",
		"version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
	},
	"dependencies": {
		"chalk": "^5.4.1",
		"cli-select": "^1.1.2",
		"console-clear": "^1.1.1",
		"figures": "^6.1.0",
		"open": "^10.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/console-clear": "^1.1.4",
		"@types/node": "^22.14.1",
		"np": "^10.2.0",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.8.1",
	"engines": {
		"node": ">=18"
	},
	"tsup": {
		"entry": [
			"src/cli.ts"
		],
		"minify": true,
		"clean": true,
		"format": "esm"
	}
}
